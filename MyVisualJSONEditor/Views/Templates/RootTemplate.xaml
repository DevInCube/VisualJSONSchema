<UserControl x:Class="MyVisualJSONEditor.Views.Templates.RootTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:MyVisualJSONEditor.Views" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <ItemsControl Background="WhiteSmoke" 
                  ItemsSource="{Binding Properties}" Focusable="False">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <views:JsonSchemaBuilder Data="{Binding}" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
