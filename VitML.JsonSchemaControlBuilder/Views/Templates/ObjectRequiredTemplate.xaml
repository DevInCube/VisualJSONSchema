<UserControl x:Class="MyVisualJSONEditor.Views.Templates.ObjectRequiredTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:MyVisualJSONEditor.Views"              
             mc:Ignorable="d"
             d:DesignWidth="300">
    <Grid Background="WhiteSmoke"
          Visibility="{Binding IsVisible, FallbackValue=true, Converter={StaticResource VisibilityConverter}}">
        <GroupBox Header="{Binding Key}">
            <views:JsonSchemaBuilder Data="{Binding Value}" Margin="5"/>
        </GroupBox>
    </Grid>
</UserControl>
